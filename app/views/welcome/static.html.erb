<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Estadisticas</h1>
  </div>
  <!-- /.col-lg-12 -->
</div>
<div class="row">
	<div class="col-lg-6">
		<table class="table">
		  <thead>
		  	<tr>
		  		<th>Armas</th>
		  		<th>Porcentaje</th>
		  	</tr>
		  </thead>
		  <tbody>
		  	<% @w_hash.each do |n, p| %>
		  	<tr>
					<td><%= n %></td> 
					<td><%= p %></td>
				</tr>
				<% end %>
		  </tbody>
		</table>

		<table class="table">
		  <thead>
		  	<tr>
		  		<th>Lugares</th>
		  		<th>Porcentaje</th>
		  	</tr>
		  </thead>
		  <tbody>
		  	<% @p_hash.each do |n, p| %>
		  	<tr>
					<td><%= n %></td> 
					<td><%= p %></td>
				</tr>
				<% end %>
		  </tbody>
		</table>

		<table class="table">
		  <thead>
		  	<tr>
		  		<th>Detective</th>
		  		<th>Casos Cerrados</th>
		  	</tr>
		  </thead>
		  <tbody>
		  	<% @d_hash.each do |n, c| %>
		  	<tr>
					<td><%= n %></td> 
					<td><%= c %></td>
				</tr>
				<% end %>
		  </tbody>
		</table>
	</div>
	<div class="col-lg-6">
		Tiempo Promedio: <span class="label label-default"><%= @prom %> Horas</span></br>

		Porcentaje casos cerrados con exito: <span class="label label-default"><%= @porcentaje_casos_cerrados %>%</span></br>
	</div>
</div>
