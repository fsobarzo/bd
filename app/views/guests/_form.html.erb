<%= form_for @guest do |f| %>
  <% if @guest.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@guest.errors.count, "error") %> prohibido esta persona por las siguientes razones:</h2>

      <ul>
      <% @guest.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <div class="field">
      <%= f.label :name %><br>
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="field">
      <%= f.label :age %><br>
      <%= f.number_field :age, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="field">
      <%= f.label :ocupation %><br>
      <%= f.text_field :ocupation, class: "form-control" %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit 'Agregar', :class => 'btn btn-default' %>
    <%= link_to 'Back', guests_path, class: "btn btn-default" %>
  </div>
<% end %>