<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Personas</h1>
  </div>
  <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        Listado de personas
      </div>
      <!-- /.panel-heading -->
      <div class="panel-body">
        <div class="table-responsive">
          <table class="table table-striped table-bordered table-hover" id="tables">
            <thead>
              <tr>
                <th>Nombre</th>
                <th>Edad</th>
                <th>Ocupaci√≥n</th>
                <th>Acciones</th>
              </tr>
            </thead>
            <tbody>
              <% @guests.each do |g| %>
                <tr>
                  <td><%= g.name %></td>
                  <td><%= g.age %></td>
                  <td><%= g.ocupation %></td>
                  <td>
                    <%= link_to 'Show', g, class: "btn btn-info" %>
                    <%= link_to 'Edit', edit_guest_path(g), class: "btn btn-info" %>
                    <%= link_to 'Destroy', g, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
