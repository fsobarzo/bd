<div class="row">
  <div class="col-lg-12">
      <h1 class="page-header">Lugares</h1>
  </div>
  <!-- /.col-lg-12 -->
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
				<%= @guest.name.capitalize %>
			</div>
			<div class="panel-body"> 
				<p>
				  <strong>Name:</strong>
				  <%= @guest.name %>
				</p>

				<p>
				  <strong>Edad:</strong>
				  <%= @guest.age %>
				</p>

				<p>
				  <strong>Ocupacion:</strong>
				  <%= @guest.ocupation %>
				</p>

				<%= link_to 'Edit', guest_path(@guest), class: "btn btn-default" %>
				<%= link_to 'Back', guests_path, class: "btn btn-default" %>
			</div>
		</div>
	</div>
</div>
 
