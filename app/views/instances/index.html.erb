<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Casos</h1>
  </div>
  <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        DataTables Advanced Tables
      </div>
      <!-- /.panel-heading -->
      <div class="panel-body">
        <div class="table-responsive">
          <table class="table table-striped table-bordered table-hover" id="tables">
            <thead>
              <tr>
                <th>Detective</th>
                <th>Nombre</th>
                <th>Victima</th>
                <th>Lugar</th>
                <th>Descripci√≥n</th>
                <th>Fecha</th>
                <th>Acciones</th>
              </tr>
            </thead>
            <tbody>
              <% @instances.each do |i| %>
                <tr>
                  <td><%= i.detective.id %> | <%= i.detective.email %></td>
                  <td><%= i.name %></td>
                  <td><%= i.victim %></td>
                  <td><%= i.place %></td>
                  <td><%= i.description %></td>
                  <td><%= i.date %></td>
                  <td>
                    <%= link_to 'Show', detective_instance_path(i.detective.id, i.id) %>
                    <%= link_to 'Edit', edit_detective_instance_path(i.detective.id, i.id) %>
                    <%= link_to 'Destroy', detective_instance_path(i.detective.id, i.id), method: :delete, data: { confirm: 'Are you sure?' } %>
                  </td>
                  
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
