<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Casos</h1>
  </div>
  <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        DataTables Advanced Tables
      </div>
      <!-- /.panel-heading -->
      <div class="panel-body">
        <div class="table-responsive">
          <table class="table table-striped table-bordered table-hover" id="tables">
            <thead>
              <tr>
                <th>Detective</th>
                <th>Nombre</th>
                <th>Acciones</th>
              </tr>
            </thead>
            <tbody>
              <% @instances.each do |i| %>
                <tr>
                  <td><%= i.detective.name %> <%= i.detective.lastname %></td>
                  <td><%= i.name %></td>
                  <td>
                    <%= link_to 'Show', detective_instance_path(i.detective.id, i.id), class: "btn btn-info" %>
                    <%= link_to 'Edit', edit_detective_instance_path(i.detective.id, i.id), class: "btn btn-info" %>
                    <%= link_to 'Destroy', detective_instance_path(i.detective.id, i.id), method: :delete, data: { confirm: '¿Seguro desea eliminar el caso?' }, class: "btn btn-danger" %>
                    <% if close?(i.id) %>
                      <%= link_to 'Abrir', close_detective_instance_path(i.detective.id, i.id), class: "btn btn-danger", data: {confirm: '¿Seguro que desea reabrir el caso?'} %>
                    <% else %>
                      <%= link_to 'Cerrar', close_detective_instance_path(i.detective.id, i.id), class: "btn btn-success" %>
                    <% end %>
                  </td>
                  
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
