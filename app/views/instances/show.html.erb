<div class="row">
  <div class="col-lg-12">
      <h1 class="page-header">Casos</h1>
  </div>
  <!-- /.col-lg-12 -->
</div>
<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @instance.name %>
</p>
<% if can? %>
	<p>
	  <strong>Victima:</strong>
	  <%= @instance.guests.victim?.name %>
	</p>

	<p>
  	<strong>Lugar:</strong>
  	<%= @instance.date %>
	</p>

<p>
  <strong>Fecha:</strong>
  <%= @instance.date %>
</p>

<p>
  <strong>Arma:</strong>
  <%# @instance.weapon.name %>
  <% @instance.weapons.each do |w| %>
  	<%=  w.name %>
	<% end %>
</p>

<p>
  <strong>Lugar:</strong>
  <%# @instance.place.name %>
  <% @instance.places.each do |p| %>
  	<%=  p.name %>
	<% end %>
</p>


<p>
  <strong>Description:</strong>
  <%= @instance.description %>
</p>
 
<% end %>
<p>
  <strong>CasoCerrado</strong>
  <%= @instance.state %>
</p>


<%= link_to 'Edit', edit_detective_instance_path(current_detective.id, @instance) %> |
<%= link_to 'Back', detective_instances_path(current_detective.id) %> |
<%= link_to 'Cerrar', close_detective_instance_path(current_detective.id, @instance) %>
